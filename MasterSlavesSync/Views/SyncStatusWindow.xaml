<Window x:Class="MasterSlavesSync.Views.SyncStatusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MasterSlavesSync.Views"
        xmlns:viewmodel="clr-namespace:MasterSlavesSync.ViewModel"
        mc:Ignorable="d"
        Title="SyncStatusWindow"
        Height="300"
        Width="250"
        WindowStartupLocation="Manual"
        ResizeMode="NoResize"
        WindowStyle="None"
        Loaded="Window_Loaded">

    <Window.DataContext>
        <viewmodel:MainWindowViewModel/>
    </Window.DataContext>
    
    <Grid>
        
        <Rectangle Fill="#90CAF9"/>
        
        <Rectangle Fill="#E3F2FD"
                   Stroke="#BBDEFB"
                   StrokeThickness="2"
                   Margin="10"
                   RadiusX="2"
                   RadiusY="2"/>
    </Grid>
        
</Window>

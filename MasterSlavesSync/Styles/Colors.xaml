<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:MasterSlavesSync.Styles">

    <!-- General Content -->

    <Color x:Key="Transparent">#00000000</Color>
    
    <Color x:Key="PrimaryVeryLight">#CADAE9</Color>
    <Color x:Key="PrimaryNotSoLight">#73C7F7</Color>
    <Color x:Key="PrimaryLight">#3397F7</Color>
    <Color x:Key="Primary">#0283FF</Color>
    <Color x:Key="PrimaryDark">#004D98</Color>
    <Color x:Key="PrimaryVeryDark">#002B54</Color>

    <Color x:Key="SecondaryVeryLight">#BEEBC1</Color>
    <Color x:Key="SecondaryLight">#0FFA1E</Color>
    <Color x:Key="Secondary">#00EE10</Color>
    <Color x:Key="SecondaryDark">#00A90B</Color>
    <Color x:Key="SecondaryVeryDark">#005606</Color>

    <!-- Button -->

    <Color x:Key="ButtonBackground">#CADAE9</Color>
    <Color x:Key="ButtonBorder">#CADAE9</Color>
    <Color x:Key="ButtonBorderOver">#00EE10</Color>
    <Color x:Key="ButtonBackgroundPressed">#0FFA1E</Color>
    
    <!-- ListView -->

    <Color x:Key="ListViewBackground">#80d6ff</Color>
    <Color x:Key="ListViewBorder">#42a5f5</Color>

</ResourceDictionary>